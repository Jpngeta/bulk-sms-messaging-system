{
    "name": "messaging-system/mvp",
    "description": "PHP messaging system with Slim Framework and Twilio SMS integration",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Config\\": "config/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public"
    }
}
